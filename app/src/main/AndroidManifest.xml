<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.za.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Features.GetAllRecipes.GetAllRecipesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Features.RecipeSteps.RecipeStepsActivity" />
        <activity android:name=".Features.RecipeDetails.RecipeDetailsActivity" />
        <activity android:name=".Features.common.BaseActivity" />
        <activity android:name=".Features.common.BaseActivitySteps"></activity>
    </application>

</manifest>